<%- include('partials/navbar', {page: '/lego/addSet' }) %>
<link rel="stylesheet" href="/css/main.css">
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <h1 class="text-2xl font-bold mb-6 text-gray-800">Add New LEGO Set</h1>
            
            <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <span class="block sm:inline"><%= errorMessage %></span>
                </div>
            <% } %>

            <form action="/lego/addSet" method="POST" class="space-y-6">
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="name">
                        Set Name
                    </label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="name" name="name" type="text" required
                        value="<%= typeof formData !== 'undefined' ? formData.name : '' %>">
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="year">
                        Year
                    </label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="year" name="year" type="number" min="1949" max="2024" required
                        value="<%= typeof formData !== 'undefined' ? formData.year : '' %>">
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="num_parts">
                        Number of Parts
                    </label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="num_parts" name="num_parts" type="number" min="1" required
                        value="<%= typeof formData !== 'undefined' ? formData.num_parts : '' %>">
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="theme_id">
                        Theme
                    </label>
                    <select class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="theme_id" name="theme_id" required>
                        <option value="">Select a theme</option>
                        <% if (Array.isArray(themes)) { %>
                            <% themes.forEach(theme => { %>
                                <option value="<%= theme.id %>" 
                                    <%= typeof formData !== 'undefined' && formData.theme_id == theme.id ? 'selected' : '' %>>
                                    <%= theme.name %>
                                </option>
                            <% }) %>
                        <% } %>
                    </select>
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="set_num">
                        Set Number
                    </label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="set_num" name="set_num" type="text" pattern="[0-9-]+" required
                        value="<%= typeof formData !== 'undefined' ? formData.set_num : '' %>">
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="img_url">
                        Image URL
                    </label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="img_url" name="img_url" type="url" required
                        value="<%= typeof formData !== 'undefined' ? formData.img_url : '' %>">
                </div>

                <div class="flex items-center justify-end">
                    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                        type="submit">
                        Add Set
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>